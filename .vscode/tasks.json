{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "PMD: check",
      "type": "shell",
      "command": "mvn -q -Dstyle.color=never pmd:check",
      "problemMatcher": {
        "owner": "pmd",
        "fileLocation": ["absolute"],
        "severity": "warning",
        "pattern": {
          "regexp": "^\\[WARNING\\] PMD Failure: (.*?):(\\d+) .* Rule:([^ ]+) .*",
          "file": 1,
          "line": 2,
          "code": 3,
          "message": 0,
        }
      },
      "group": "test"
    }
  ]
}
